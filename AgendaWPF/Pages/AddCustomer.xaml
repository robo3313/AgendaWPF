<Page x:Class="AgendaWPF.Models.AddCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgendaWPF.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCustomer">

    <StackPanel>
        <TextBlock>Créer un nouveau client :</TextBlock>

        <Label Name="Firstname">Prénom</Label>
        <TextBox Name="FirstnameText" Text="{Binding Firstname}"></TextBox>

        <Label Name="Lastname">Nom</Label>
        <TextBox Name="LastnameText" Text="{Binding Lastname}"></TextBox>

        <Label Name="Mail">Email</Label>
        <TextBox Name="MailText" Text="{Binding Mail}"></TextBox>

        <Label Name="PhoneNuber">Numéro de téléphone</Label>
        <TextBox Name="PhoneNuberText" Text="{Binding PhoneNumber}"></TextBox>

        <Label Name="Budget">Budget</Label>
        <TextBox Name="BudgetText" Text="{Binding Budget}"></TextBox>

        <Button Click="Button_Add">Ajouter</Button>
        
    </StackPanel>
</Page>
