<Window x:Class="AgendaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaWPF"
        mc:Ignorable="d"
        Title="Agenda LaManu" Height="800" Width="1200">
    <StackPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="_Clients">
                <MenuItem Header="_Ajouter un client" Click="MenuItem_AddCustomer"/>
                <MenuItem Header="_Liste des clients" Click="MenuItem_ListCustomer"/>
            </MenuItem>
            <MenuItem Header="_Courtiers">
                <MenuItem Header="_Ajouter un courtier" Click="MenuItem_AddBroker"/>
                <MenuItem Header="_Liste des courtiers" Click="MenuItem_ListBroker"/>
            </MenuItem>
            <MenuItem Header="_Rendez-vous">
                <MenuItem Header="_Ajouter un rendez-vous" Click="MenuItem_AddAppointment"/>
                <MenuItem Header="_Liste des rendez-vous" Click="MenuItem_ListAppointment"/>
            </MenuItem>
        </Menu>
        <Frame Name="MainFrame" x:FieldModifier="public" >
        </Frame>

    </StackPanel>
    
    

</Window>
